<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="appBackgroundColor" format="color"/>
    <attr name="elementColor_black_white" format="color"/>
    <attr name="elementColor_lightgray_gray" format="color"/>
    <attr name="elementColor_gray_white" format="color"/>
    <attr name="elementColor_red_white" format="color"/>
    <attr name="elementColor_white2_black2" format="color"/>

    <!-- Base application theme. -->
    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="appBackgroundColor">@color/white</item>
        <item name="elementColor_black_white">@color/black</item>
        <item name="elementColor_lightgray_gray">@color/light_gray</item>
        <item name="elementColor_gray_white">@color/gray</item>
        <item name="elementColor_red_white">@color/red</item>
        <item name="elementColor_white2_black2">@color/white_2</item>
    </style>

    <style name="Theme.PracticumAndroidDiploma" parent="Base.Theme.PracticumAndroidDiploma" />

    <style name="TextBold_32size_700weight">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextMedium_22size_500weight">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextMedium_16size_500weight">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextRegular_16size_400weight">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextRegular_12size_400weight">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="bottom_navigation_panel" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/switch_navigation_item_color</item>
        <item name="itemTextColor">@color/switch_navigation_item_color</item>
        <item name="android:background">?attr/appBackgroundColor</item>
    </style>

    <style name="RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/blue</item>
        <item name="buttonSize">@dimen/size_24dp</item>
        <item name="android:layout_marginVertical">@dimen/margin_18</item>
        <item name="android:layout_height">@dimen/size_24dp</item>
        <item name="android:layout_width">wrap_content</item>

    </style>
</resources>
